@model UserResponse
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}


    <form method="post" asp-action="Davet" asp-controller="Home">
        <div class="form-group">
            <label>Adınız:</label>
            <input class="form-control" asp-for="@Model.FullName" />
            <span asp-validation-for="@Model.FullName"></span>
        </div>
        <div class="form-group">
            <label>E-posta Adresiniz:</label>
            <input class="form-control" asp-for="@Model.Email" />
            <span asp-validation-for="@Model.Email"></span>
        </div>
        <div class="form-group">
            <label>Doğum Tarihiniz:</label>
            <input asp-for="@Model.BirthDay" />
            <span asp-validation-for="@Model.BirthDay"></span>
        </div>
        <div class="form-group">
            <label>Katılacak mısınız:</label>
            <select class="form-control" asp-for="@Model.IsAccepted">
                <option value="True">Evet geliyorum.</option>
                <option value="False">Hayır gelmiyorum.</option>
            </select>
            <span asp-validation-for="@Model.IsAccepted"></span>
        </div>
        <input type="submit" name="name" value="Kaydet" class="btn btn-danger" />
    </form>

